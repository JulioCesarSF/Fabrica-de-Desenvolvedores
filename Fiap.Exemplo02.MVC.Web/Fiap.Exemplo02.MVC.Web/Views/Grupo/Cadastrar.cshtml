@model Fiap.Exemplo02.Dominio.Models.Grupo
@{
    ViewBag.Title = "Cadastrar";
}

@Juliao.Titulo("Cadastrar Grupo/Projeto")

<div class="row">
    <div class="col-md-12">
        <div class="@TempData["tipoMensagem"]">
            <p>@TempData["mensagem"]</p>
        </div>
    </div>
</div>

@Html.ValidationSummary()

<div class="row">
    @using (Html.BeginForm())
    {
        <div class="col-md-6">
            <div class="page-header">
                <h4>Grupo</h4>
            </div>


            <div class="form-group">
                @Html.LabelFor(g => g.Nome)
                @Html.TextBoxFor(g => g.Nome, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(g => g.Nota)
                @Html.TextBoxFor(g => g.Nota, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-success" value="Salvar" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="page-header">
                <h4>Projeto</h4>
            </div>

            <div class="form-group">
                @Html.LabelFor(g => g.Projeto.Nome)
                @Html.TextBoxFor(g => g.Projeto.Nome, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(g=>g.Projeto.Descricao)
                @Html.TextAreaFor(g=>g.Projeto.Descricao, new { @class="form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(g=>g.Projeto.DataInicio)
                @Html.TextBoxFor(g=>g.Projeto.DataInicio, "{0:dd/MM/yyyy}", new { @class = "form-control" })
                @Html.ValidationMessageFor(g=>g.Projeto.DataInicio)
            </div>

            <div class="form-group">
                @Html.LabelFor(g => g.Projeto.DataTermino)
                @Html.TextBoxFor(g => g.Projeto.DataTermino, "{0:dd/MM/yyyy}", new { @class = "form-control" })
                
            </div>

            <div class="form-group">
                @Html.LabelFor(g=>g.Projeto.Entregue)
                @Html.CheckBoxFor(g=>g.Projeto.Entregue)
            </div>

        </div>



    }

</div>

@section scripts{
<script>

    $().ready(function () {
        $("#Projeto_DataInicio").datepicker({ dateFormat: "dd/mm/yy" });
        $("#Projeto_DataTermino").datepicker({ dateFormat: "dd/mm/yy" });
        $(".selector").datepicker("option", "dateFormat", "dd/mm/yy");

    });
            
</script>
}
