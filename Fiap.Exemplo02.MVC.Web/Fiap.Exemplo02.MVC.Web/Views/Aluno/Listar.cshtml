@model IList<Fiap.Exemplo02.MVC.Web.Models.Aluno>
@{
    ViewBag.Title = "Listar";
}

@Juliao.Titulo("Listar")

<div class="row">
    <div class="col-md-12">
        <div class="@TempData["tipoMensagem"]">
            <p>@TempData["mensagem"]</p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Data Nascimento</th>
                    <th>Desconto</th>
                    <th>Bolsa</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Nome</td>
                        <td>@item.DataNascimento.ToShortDateString()</td>
                        <td>@item.Desconto</td>
                        <td>@item.Bolsa</td>
                        <td> 
                            
                            @using (Html.BeginForm("Excluir", "Aluno"))
                            {
                                @Html.Hidden("id", @item.Id)
                                @Html.ActionLink("Editar", "Editar", new { id = @item.Id }, new { @class = "btn btn-primary btn-sm" })
                                @Juliao.SubmitSemDiv("Excluir", "btn btn-danger btn-sm")
                            }

                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
