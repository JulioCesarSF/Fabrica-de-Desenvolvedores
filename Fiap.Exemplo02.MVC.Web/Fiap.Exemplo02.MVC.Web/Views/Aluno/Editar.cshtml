@model Fiap.Exemplo02.MVC.Web.ViewModels.AlunoViewModel
@{
    ViewBag.Title = "Editar";
}

@Juliao.Titulo("Editar Aluno")

<div class="row">
    <div class="col-md-12">
        <div class="@TempData["tipoMensagem"]">
            <p>@TempData["mensagem"]</p>
        </div>
    </div>
</div>

@Html.ValidationSummary()

<div class="row"> 
    <div class="col-md-12">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                @Html.LabelFor(a => a.Nome)
                @Html.TextBoxFor(a=>a.Nome, new { @class = "form-control", @Value = Model.Nome })
                @Html.ValidationMessageFor(a=>a.Nome)
            </div>

            <div class="form-group">
                @Html.LabelFor(a => a.DataNascimento)
                @*@Html.TextBoxFor(Model.DataNascimento, new { @class = "form-control" })*@
                @Html.TextBoxFor(a => a.DataNascimento, "{0:yyyy-MM-dd}",
               
               new {
                   @class = "form-control",
                   @Value = Model.DataNascimento.Date.ToString("yyyy-MM-dd"),
                   type = "date" })
                
                @Html.ValidationMessageFor(a=>a.DataNascimento)
            </div>

            <div class="form-group">
                @Html.LabelFor(a => a.Desconto)
                @Html.TextBoxFor(a=>a.Desconto, new { @class = "form-control", @Value=Model.Desconto })
                @Html.ValidationMessageFor(a=>a.Desconto)
            </div>

            <div class="form-group">
                @Html.LabelFor(a => a.Bolsa)
                @Html.CheckBoxFor(a=>a.Bolsa, new { @checked = (Model.Bolsa) ? "checked" : "unchecked" })
                @Html.ValidationMessageFor(a=>a.Bolsa)
            </div>

            <div class="form-group">
                @Html.LabelFor(a=>a.GrupoId)
                @Html.DropDownListFor(a=>a.GrupoId, Model.ListaGrupo, new { @class = "form-control", @Value=Model.GrupoId })
                @Html.ValidationMessageFor(a=>a.GrupoId)
            </div>

            @Juliao.Submit("Salvar")
           
        }
    </div>
</div>

