@model List<Fiap.Ex02.MVC.Web.Models.Grupo>

@foreach (var item in Model)
{
    <tr>
        <td>@item.Nome</td>
        <td>@(item.Nota == 0 ? "Sem Nota" : item.Nota.ToString())</td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id = @item.Id }, new { @class = "btn btn-primary btn-sm" })
            <button onclick="excluirId.value=@item.Id" type="button" class="btn btn-danger btn-sm"
                    data-toggle="modal" data-target="#modalExcluir">
                Excluir
            </button>
        </td>
    </tr>
}
