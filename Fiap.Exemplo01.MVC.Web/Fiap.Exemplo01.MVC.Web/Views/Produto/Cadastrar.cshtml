@model Fiap.Exemplo01.MVC.Web.Models.Produto
@{
    ViewBag.Title = "Cadastrar";
}

<div class="row">
    <div class="col-md-12">
        <div class="page-header">
            <h2>Cadastrar</h2>
        </div>
    </div>

</div>
<!-- Formulário
    Nome, Valor, Quantidade
     -->
<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                @Html.LabelFor(p => p.Nome)
                @Html.TextBoxFor(p => p.Nome, new { placeholder = "Digite o nome do Produto", @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(p => p.Valor)
                @Html.TextBoxFor(p => p.Valor, new { placeholder = "Digite o valor do Produto", @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(p => p.Quantidade)
                @Html.TextBoxFor(p => p.Quantidade, new { placeholder = "Digite a quantidade", @class = "form-control" })
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        }
    </div>
</div>
