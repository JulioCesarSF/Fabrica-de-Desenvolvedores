@model Fiap.Exemplo01.MVC.Web.Models.Cliente
@{
    ViewBag.Title = "Cadastrar";
}

<div class="row">
    <div class="col-md-12">
        <div class="page-header">
            <h2>Cadastrar</h2>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        @if (TempData["mensagem"] != null)
        {
            <div class="@TempData["tipoMensagem"]">
                @TempData["mensagem"]
            </div>
        }
    </div>
</div>


<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                @Html.LabelFor(c => c.Nome)
                @Html.TextBoxFor(c => c.Nome, new { placeholder = "Digite seu nome", @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(c => c.Idade)
                @Html.TextBoxFor(c => c.Idade, new { placeholder = "Digite sua idade", @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(c => c.Credito)
                @Html.TextBoxFor(c => c.Credito, new { placeholder = "Digite seu crédito", @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.CheckBoxFor(c => c.NecessidadesEspeciais)
                @Html.LabelFor(c => c.NecessidadesEspeciais)
            </div>

            <div class="form-group">
                @Html.LabelFor(c => c.DataNascimento)
                @Html.EditorFor(c => c.DataNascimento, new { @class = "form-control" })
            </div>
            //TODO melhorar o SelectList
            <div class="form-group">
                @Html.LabelFor(c => c.EstadoCivil)

                @Html.DropDownListFor(c => c._estadoCivil, ViewBag.ListaEstadoCivil as SelectList, new { @class = "form-control" })

                @*@Html.TextBoxFor(c => c.EstadoCivil, new { placeholder="Digite seu Estado Civil", @class="form-control" })*@
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        }

    </div>
</div>